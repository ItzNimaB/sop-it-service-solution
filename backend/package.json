{
  "name": "backend_express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon",
    "test": "vitest --run --reporter=verbose",
    "run-prod": "npm run build && npm run start",
    "db:pull": "npx prisma db pull && npx prisma generate",
    "db:push": "npx prisma db push && node prisma/addViews.js",
    "db:seed": "npx prisma db seed"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "@types/ldapjs": "^3.0.6",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "ldapjs": "^3.0.7",
    "node-mailjet": "^6.0.5",
    "pdfkit": "^0.15.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "zod": "^3.24.1",
    "zod-prisma-types": "^3.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/pdfkit": "^0.13.4",
    "nodemon": "^3.1.3",
    "prisma": "^5.19.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
