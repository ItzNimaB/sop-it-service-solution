{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["./api/controllers/*"],
      "@routes/*": ["./api/routes/*"],
      "@services/*": ["./api/services/*"],
      "@middleware/*": ["./api/middleware/*"],
      "@functions": ["./functions"],
      "@functions/*": ["./functions/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
