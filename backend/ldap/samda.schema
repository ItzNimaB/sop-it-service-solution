# File: samba.schema
# This is a basic Samba schema to support sAMAccountName

attributetype ( 1.3.6.1.4.1.7165.4.1.4
    NAME 'sAMAccountName'
    DESC 'Windows Active Directory logon name'
    EQUALITY caseIgnoreMatch
    SUBSTR caseIgnoreSubstringsMatch
    SYNTAX 1.3.6.1.4.1.1466.115.121.1.15{256} )

objectclass ( 1.3.6.1.4.1.7165.4.1.2
    NAME 'sambaAccount'
    SUP top AUXILIARY
    DESC 'Samba Account'
    MUST ( sAMAccountName )
    MAY ( uid $ uidNumber $ gidNumber $ homeDirectory ) )